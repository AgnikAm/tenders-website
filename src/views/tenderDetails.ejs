<% title = 'Szczegóły przetargu' %>

<h1><%= tender.title %></h1>
<p><%= tender.description %></p>
<p><strong>Instytucja zamawiająca:</strong> <%= tender.institution %></p>
<p><strong>Data rozpoczęcia:</strong> <%= tender.startDate %></p>
<p><strong>Data zakończenia:</strong> <%= tender.endDate %></p>

<% if (isActive) { %>
  <h3 class="mt-4">Składaj ofertę:</h3>
  <form action="/tenders/<%= tender.id %>/offer" method="POST" class="row g-3">
    <div class="col-md-6">
      <label for="bidderName" class="form-label">Nazwa składającego ofertę:</label>
      <input type="text" id="bidderName" name="bidderName" class="form-control" required />
    </div>
    <div class="col-md-6">
      <label for="offerValue" class="form-label">Wartość oferty:</label>
      <input type="number" id="offerValue" name="offerValue" class="form-control" required />
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-success">Złóż ofertę</button>
    </div>
  </form>
<% } else { %>
  <div class="alert alert-warning mt-4">Przetarg zakończony, składanie ofert nie jest możliwe.</div>
<% } %>
