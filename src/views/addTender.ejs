<% title = 'Dodaj przetarg' %>

<h1 class="mb-4">Dodaj nowy przetarg</h1>

<form action="/add-tender" method="POST" class="row g-3">
  <div class="col-md-6">
    <label for="title" class="form-label">Tytuł przetargu:</label>
    <input type="text" id="title" name="title" class="form-control" required />
  </div>

  <div class="col-md-6">
    <label for="institution" class="form-label">Instytucja zamawiająca:</label>
    <input type="text" id="institution" name="institution" class="form-control" required />
  </div>

  <div class="col-12">
    <label for="description" class="form-label">Opis przetargu:</label>
    <textarea id="description" name="description" class="form-control" required></textarea>
  </div>

  <div class="col-md-6">
    <label for="startDate" class="form-label">Data i godzina rozpoczęcia:</label>
    <input type="datetime-local" id="startDate" name="startDate" class="form-control" required />
  </div>

  <div class="col-md-6">
    <label for="endDate" class="form-label">Data i godzina zakończenia:</label>
    <input type="datetime-local" id="endDate" name="endDate" class="form-control" required />
  </div>

  <div class="col-md-6">
    <label for="maxBudget" class="form-label">Maksymalna wartość budżetu:</label>
    <input type="number" id="maxBudget" name="maxBudget" class="form-control" step="0.01" required />
  </div>

  <div class="col-12">
    <button type="submit" class="btn btn-primary">Zgłoś przetarg</button>
  </div>
</form>
