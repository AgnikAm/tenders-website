<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <title>Lista trwających przetargów</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Aktualnie trwające przetargi</h1>

  <table border="1">
    <thead>
      <tr>
        <th>#</th>
        <th>Nazwa przetargu</th>
        <th>Data rozpoczęcia</th>
        <th>Data zakończenia</th>
      </tr>
    </thead>
    <tbody>
      <% tenders.forEach((tender, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><a href="/tenders/<%= tender.id %>"><%= tender.title %></a></td>
          <td><%= new Date(tender.startDate).toLocaleString('pl-PL') %></td>
          <td><%= new Date(tender.endDate).toLocaleString('pl-PL') %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <p><a href="/">Powrót do strony głównej</a></p>
</body>
</html>
